<div class="container">
	<div class="row">
		<!-- タグ一覧 -->
		<h3>タグ一覧</h3>
		<% @tag_list.each do |list| %>
			<%= link_to list.tag_name, tag_comics_path(tag_id: list.id) %>
		<% end %>
	</div>

	<br>

	<%= link_to "作品情報とレビュー一覧に戻る", comic_path(@comics), class: 'btn btn-primary' %>

	<h4>
	タグが
		<b>“<%= @tag.tag_name %>”</b>
	のタイトル一覧
	</h4>

	<table class="table table-hover table-inverse">
		<thead>
          <tr>
          </tr>
        </thead>

    	<tbody>
		    <% @comics.each do |comic| %>
		        <tr>
		          <td>
		            <%= attachment_image_tag comic, :image, size: '80x80' , fallback: "no_comic_image.png" %>
		          </td>
		          <td>
		            <%= link_to comic_path(comic) do %>
		            <%= comic.title %>
		            <% end %>
		          </td>
		        </tr>
		    <% end %>
		</tbody>
	</table>

</div>
