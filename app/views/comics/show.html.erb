<div class="container">
  <div class="row">
  	<div class="col-xs-9">
  		<h3><b><%= @comic.title %></b></h3>
  			<div class="text-right">
    			<%= link_to "マンガタイトル一覧に戻る", comics_path, class: 'btn btn-default btn-lg pull-right' %>
          <%= link_to "このマンガのレビューを書く", new_comic_impression_path(@comic, @impression), class: 'btn btn-default btn-lg pull-right' %>
			</div>
  		<%= attachment_image_tag @comic, :image, size: '150x150' , fallback: "no_comic_image.png" %>
  		<h4><b>ストーリー紹介</b></h4>
  			<%= @comic.explanation %>
  	</div>
  	<!-- ユーザーからのレビュー一覧をrenderで引っ張ってくる -->
  	<%= render 'impressions/impression_index', impressions: @impressions %>
  </div>
</div>