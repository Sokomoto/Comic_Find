<div class="row">
  <div class="col-md-8 col-md-offset-2">

    <% if @comics %>
    <div class="search-result">
      <h3>検索結果<small> (<%= @comics.count %>件)</small></h3>
  	</div>

		<% @comics.each do |comic| %>
			<div class="title-search">
				<div class="title-search-inner">
					<%= attachment_image_tag comic, :image, size: '100x150' , fallback: "no_comic_image.png" %>
					<%= link_to comic_path(comic) do %>
					<%= truncate comic.title, length: 15 %>
					<% end %>
					<h5><b>あらすじ・ストーリー</b></h5>
					<div class="well"><%= truncate comic.explanation, length: 150 %></div>
				</div>
			</div>
		<% end %>

	<% else %>

		<h1 class="center">検索結果はありません</h1>

	<% end %>

  </div>
</div>