<div class="row">
  <div class="col-md-8 col-md-offset-2">

    <% if @comics %>

      <h3>検索結果<small> (<%= @comics.count %>件)</small></h3>
      <table class="table table-hover table-inverse">
	      <% @comics.each do |comic| %>
	            <tr>
	              <td>
	                <%= attachment_image_tag comic, :image, size: '80x80' , fallback: "no_comic_image.png" %>
	              </td>
	              <td>
	                <%= link_to comic_path(comic) do %>
	                <%= comic.title %>
	                <% end %>
	              </td>
	              <td><%= comic.explanation %></td>
	            </tr>
	        <% end %>

    	  <% else %>

      		<h1 class="center">検索結果はありません</h1>

    	  <% end %>
    </table>

  </div>
</div>