
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="row">
    	<h2 class="col-md-6">マンガタイトル一覧</h2>
      <div class="productnew col-md-3">
      　　<%= link_to "新しいマンガを追加", 'パス名が入ります', class: 'btn btn-default btn-lg pull-right' %>
      </div>
    </div>

    <table class="table">
      <thead>
        <tr>
          <th>タイトルID</th>
          <th>マンガのタイトル</th>
       　　<th>作品詳細</th>
        </tr>
      </thead>
      <tbody>
    	 <% @comics.each do |comic| %>
    	 <tr>
    	 	<td><%= comic.id %></td>
        <td><%= comic.title %></td>
    	 	<td><%= link_to '作品情報とレビューへ移動', "パス名が入ります", class: 'btn btn-info btn-block' %></td>
    	 </tr>
    	 <% end %>
       <!-- kaminariのページネーションを追加 -->
      </tbody>
    </table>

  </div>
</div>