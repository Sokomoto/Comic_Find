<div class="container">
	<div class="row">
		<div class="col-xs-10">
			<div class="taglist-border">
				<!-- タグ一覧 -->
				<h3><b>タグ一覧</b></h3>
				<% @tag_list.each do |list| %>
					<div class="label label-default">
						<%= link_to list.tag_name, tag_admins_comics_path(tag_id: list.id),class: "taglink" %>
					</div>
				<% end %>
			</div>
		</div>
	</div>

	<br>

	<div class="row">
		<div class="col-xs-10">
			<div class="taglist-border">
				<h4>
				タグが
					<b>“<%= @tag.tag_name %>”</b>
				のタイトル一覧
				</h4>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-10">
		    <% @comics.each do |comic| %>
	          <div class="tag-search">
	            <div class="tag-search-inner">
					<%= attachment_image_tag comic, :image, size: '100x150' , fallback: "no_comic_image.png" %>
					<%= link_to admins_comic_path(comic),class: "titlelink" do %>
					<b><%= truncate comic.title, length: 15 %></b>
					<% end %>
					<h5><b>あらすじ・ストーリー</b></h5>
					<div class="well"><%= truncate comic.explanation, length: 150 %></div>
			    </div>
			</div>
		    <% end %>
		</div>
	</div>

</div>
